POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Security
JWT_SECRET=your_super_secure_jwt_secret_key_here_with_at_least_32_characters

