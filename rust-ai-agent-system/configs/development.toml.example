# Development Environment Configuration
# Copy this file to development.toml and update with your settings

[api]
host = "127.0.0.1"
port = 8080
workers = 4
cors_origins = ["http://localhost:3000", "http://localhost:5173"]

[database]
url = "postgresql://postgres:password@localhost:5432/mcp_platform"
max_connections = 10
min_connections = 2
connect_timeout = 30
idle_timeout = 600
max_lifetime = 1800

[mcp]
server_port = 3000
max_connections = 100
timeout_seconds = 30
retry_attempts = 3

[security]
jwt_secret = "your-development-jwt-secret-key-here"
jwt_expiration = 86400  # 24 hours
api_key_length = 32
password_min_length = 8

[logging]
level = "debug"
format = "json"
file_path = "logs/mcp-platform.log"
max_file_size = 10485760  # 10MB
max_files = 5

[redis]
url = "redis://localhost:6379"
pool_max_open = 10
pool_max_idle = 5
pool_timeout = 30

[monitoring]
metrics_port = 9090
health_check_interval = 30
performance_sampling_rate = 0.1

[external_apis]
# Add your external API configurations here
# openai_api_key = "your-openai-api-key"
# anthropic_api_key = "your-anthropic-api-key"

[features]
enable_debug_mode = true
enable_metrics = true
enable_tracing = true
enable_rate_limiting = false
enable_caching = true